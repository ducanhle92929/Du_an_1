<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvManageProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Quản Lý Sản Phẩm"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Tên sản phẩm -->
        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Sản Phẩm"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Giá sản phẩm -->
        <EditText
            android:id="@+id/etProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Mô tả sản phẩm -->
        <EditText
            android:id="@+id/etProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô Tả"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- URL image -->
        <EditText
            android:id="@+id/etImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL Image"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Danh mục -->
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp" />

        <!-- Size sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Size Sản Phẩm"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Khu vực thêm size -->
        <LinearLayout
            android:id="@+id/layoutSizes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <!-- Ô nhập size sẽ được thêm động tại đây -->
        </LinearLayout>

        <!-- Nút thêm size -->
        <Button
            android:id="@+id/btnAddSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:text="Thêm Size" />

        <!-- Nút thêm danh mục -->
        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:text="Thêm Danh Mục" />

        <!-- Nút thêm sản phẩm -->
        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:text="Thêm Sản Phẩm" />
    </LinearLayout>
</LinearLayout>
