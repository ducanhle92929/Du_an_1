<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/main1">
    <!-- Khối chứa thông tin đơn hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center">

        <!-- Mã đơn hàng -->
        <TextView
            android:id="@+id/tvOrderIdadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <!-- Ngày đặt -->
        <TextView
            android:id="@+id/tvOrderDateadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: "
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <!-- Trạng thái -->
        <TextView
            android:id="@+id/tvStatusadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="6dp" />

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tvTotalPriceadmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtOderadmin"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Xem chi tiết"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:backgroundTint="#000"
        android:background="@drawable/button_background"
        android:textColor="#FFF"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/txtOderadmin1"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Xác nhận đơn hàng"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:backgroundTint="#000"
        android:background="@drawable/button_background"
        android:textColor="#FFF"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/txtOderadmin2"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Đã giao hàng"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:backgroundTint="#000"
        android:background="@drawable/button_background"
        android:textColor="#FFF"
        android:layout_marginTop="8dp" />
</LinearLayout>
